# OriginLytics.com - Environment Variables Configuration
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# ===================================================================
# GOOGLE ANALYTICS
# ===================================================================
# Get your GA4 Measurement ID from: https://analytics.google.com/
# Format: G-XXXXXXXXXX
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ===================================================================
# ERROR TRACKING (SENTRY)
# ===================================================================
# Get your Sentry DSN from: https://sentry.io/
# Format: https://examplePublicKey@o0.ingest.sentry.io/0
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# Sentry Environment (development, staging, production)
SENTRY_ENVIRONMENT=production

# Sentry Release Version (use git commit hash or version number)
SENTRY_RELEASE=1.0.0

# ===================================================================
# API ENDPOINTS (Future Features)
# ===================================================================
# Main API endpoint for content verification
API_ENDPOINT=https://api.originlytics.com

# API version
API_VERSION=v1

# API timeout (milliseconds)
API_TIMEOUT=30000

# ===================================================================
# FEATURE FLAGS
# ===================================================================
# Enable/disable features for gradual rollouts
ENABLE_DEMO_FORM=true
ENABLE_CONTACT_FORM=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true
ENABLE_SERVICE_WORKER=false

# ===================================================================
# THIRD-PARTY INTEGRATIONS
# ===================================================================
# HubSpot (for marketing automation)
HUBSPOT_PORTAL_ID=
HUBSPOT_FORM_ID=

# Intercom (for customer support chat)
INTERCOM_APP_ID=

# Stripe (for payment processing)
STRIPE_PUBLIC_KEY=

# ===================================================================
# CONTENT DELIVERY
# ===================================================================
# CDN URL for static assets (if using custom CDN)
CDN_URL=https://cdn.originlytics.com

# Image optimization service
IMAGE_CDN_URL=https://images.originlytics.com

# ===================================================================
# UPTIME MONITORING
# ===================================================================
# UptimeRobot API Key
UPTIMEROBOT_API_KEY=

# Better Uptime API Token
BETTERUPTIME_API_TOKEN=

# ===================================================================
# EMAIL SERVICE
# ===================================================================
# SendGrid API Key (for transactional emails)
SENDGRID_API_KEY=

# From email address
EMAIL_FROM=noreply@originlytics.com

# Support email
EMAIL_SUPPORT=support@originlytics.com

# ===================================================================
# SOCIAL MEDIA
# ===================================================================
TWITTER_HANDLE=@originlytics
FACEBOOK_PAGE_ID=
LINKEDIN_COMPANY_ID=

# ===================================================================
# SEO & METADATA
# ===================================================================
# Site URL (production)
SITE_URL=https://originlytics.com

# Default site title
SITE_TITLE=OriginLytics - AI Content Authenticity Platform

# Default meta description
SITE_DESCRIPTION=Verify AI-generated content authenticity with OriginLytics. Advanced detection algorithms, provenance tracking, and content verification.

# Default OG image
OG_IMAGE_URL=https://originlytics.com/og-image.png

# ===================================================================
# PERFORMANCE & OPTIMIZATION
# ===================================================================
# Enable Brotli compression
ENABLE_BROTLI=true

# Enable image lazy loading
ENABLE_LAZY_LOADING=true

# Enable service worker for offline support
ENABLE_SERVICE_WORKER=false

# ===================================================================
# DEVELOPMENT
# ===================================================================
# Node environment (development, staging, production)
NODE_ENV=production

# Debug mode (verbose logging)
DEBUG_MODE=false

# Enable source maps
ENABLE_SOURCE_MAPS=false

# ===================================================================
# SECURITY
# ===================================================================
# Content Security Policy (CSP) mode (report-only or enforce)
CSP_MODE=enforce

# Rate limiting (requests per minute)
RATE_LIMIT=100

# ===================================================================
# A/B TESTING (Optional)
# ===================================================================
# Google Optimize Container ID
GOOGLE_OPTIMIZE_ID=

# Optimizely Project ID
OPTIMIZELY_PROJECT_ID=

# ===================================================================
# CHAT & SUPPORT
# ===================================================================
# Zendesk Widget Key
ZENDESK_KEY=

# Drift Chat ID
DRIFT_ID=

# Crisp Chat Website ID
CRISP_WEBSITE_ID=

# ===================================================================
# PAYMENT & SUBSCRIPTIONS (Future)
# ===================================================================
# Stripe Publishable Key
STRIPE_PUBLISHABLE_KEY=

# Paddle Vendor ID
PADDLE_VENDOR_ID=

# ===================================================================
# DEPLOYMENT
# ===================================================================
# Git commit hash (auto-populated in CI/CD)
GIT_COMMIT_SHA=

# Build timestamp (auto-populated in CI/CD)
BUILD_TIMESTAMP=

# Deployment environment
DEPLOYMENT_ENV=production

# ===================================================================
# NOTES
# ===================================================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Update all placeholder values with actual credentials
# 3. NEVER commit .env to version control
# 4. Add .env to .gitignore
# 5. For local development, use .env.development
# 6. For staging, use .env.staging
# 7. For production, set environment variables in hosting platform
#    (Vercel, Netlify, etc.)

# ===================================================================
# SECURITY REMINDER
# ===================================================================
# - Keep this file secure
# - Rotate keys regularly
# - Use different keys for development/staging/production
# - Never share credentials via email or chat
# - Use secret management tools (Vault, AWS Secrets Manager)
# - Monitor for leaked credentials (GitHub Secret Scanning)
